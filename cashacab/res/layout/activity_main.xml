<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.hacktm.cashacab.activities.MainActivity"
    android:background="#faf4d3" >

    
<RelativeLayout
    android:id="@+id/rl"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:background="#ffffff" >

        <TextView
            android:id="@+id/currentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="13.25 LEI"
            android:textSize="50sp" />
        
            <TextView
        android:id="@+id/idCabbie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:layout_marginTop="5dp"
		android:layout_marginRight="5dp"
        android:text="Id:73"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/nameCabbie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="Vasile Georgel"
        android:textSize="15sp" />
    
</RelativeLayout>
<ScrollView 
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/rl"
    android:fillViewport="true" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
<RelativeLayout 
    android:id="@+id/rl2"
    android:layout_width="fill_parent"
    android:layout_marginTop="2dp"
    android:layout_height="40dp"
    android:layout_below="@+id/rl"
    android:background="#ffffff">

    <TextView
        android:id="@+id/distanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/distanceDriven"
        android:layout_marginLeft="20dp"
        android:text="Distance driven: "
        android:textSize="12sp" />
    
        <TextView
            android:id="@+id/distanceDriven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="5.42 KM "
            android:textSize="18sp" />


    
</RelativeLayout>
<LinearLayout
    android:id="@+id/ll1"
    android:layout_width="fill_parent"
    android:layout_below="@+id/rl2"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/btnverde"
        android:text="Start" 
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginRight="3dp"
        android:layout_marginTop="15dp"/>

<Button
    android:id="@+id/buttonStop"
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:background="@drawable/btnrosu"
    android:layout_weight="1"
    android:layout_marginLeft="3dp"
    android:textStyle="bold"
    android:textColor="#ffffff"
    android:layout_marginTop="15dp"
    android:text="Stop" />
    
</LinearLayout>
<RelativeLayout 
    android:id="@+id/rl5"
    android:layout_width="fill_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ll1">

            <Switch
                android:id="@+id/switchTariff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Tariff"
                android:textOff="Intern"
                android:textOn="Extern" />
            
</RelativeLayout>


<LinearLayout 
    android:id="@+id/rl4"
    android:layout_width="fill_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    
        <TextView
            android:id="@+id/startPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start price: 2.19 LEI "
            android:textSize="20sp" />
        
        <TextView
            android:id="@+id/idlePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idling price: 21.90 LEI/H"
            android:textSize="20sp" />
        
        <TextView
            android:id="@+id/distancePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance price: 2.19 LEI/KM"
            android:textSize="20sp"
            android:layout_marginBottom="5dp" />
    
</LinearLayout>
</LinearLayout>
</ScrollView>"
</RelativeLayout>
